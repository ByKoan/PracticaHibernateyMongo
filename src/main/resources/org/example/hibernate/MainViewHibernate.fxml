<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.hibernate.hibernateFiles.MainController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="40">

            <Label text="Centro Médico San Mateo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="txtUsuario" promptText="Usuario" />
            <PasswordField fx:id="txtContrasena" promptText="Contraseña" />
            <Button text="Iniciar Sesión" onAction="#iniciarSesion" prefWidth="150" />

            <Label fx:id="lblMensaje" textFill="red" />
        </VBox>
    </children>
</AnchorPane>
